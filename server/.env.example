# Database
DATABASE_URL=postgresql://dbuser:dbpass@localhost:5432/dbname?schema=public

# Logs
# LOG_FORMAT=json|pretty
LOG_FORMAT=pretty
# LOG_LEVEL=debug|log|warn|error
LOG_LEVEL=debug

# JWT
JWT_ACCESS_SECRET=change-me-access
JWT_REFRESH_SECRET=change-me-refresh
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Cookies
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# App
APP_NAME=AppName
APP_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# Wallet Hygiene Monitor (scanner)
# Set at least one RPC URL to enable scanning
RPC_ETHEREUM_URL=
RPC_POLYGON_URL=
RPC_ARBITRUM_URL=
SCANNER_POLL_INTERVAL_MS=30000
SCANNER_CONFIRMATIONS=5

# Telegram notifications
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# Mail (optional). If not set, emails will be logged to console.
MAIL_FROM="AppName <no-reply@appname.local>"
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ===== Backfill / Scanner defaults (can be overridden per-chain) =====
BACKFILL_DAYS_DEFAULT=30
CONFIRMATIONS_DEFAULT=6
BATCH_SIZE_BLOCKS_DEFAULT=5000
RATE_LIMIT_DELAY_MS_DEFAULT=300
MAX_RETRIES_DEFAULT=3

# ===== Ethereum =====
ETH_BACKFILL_DAYS=30
ETH_CONFIRMATIONS=6
ETH_BATCH_SIZE_BLOCKS=5000
ETH_RATE_LIMIT_DELAY_MS=300
ETH_MAX_RETRIES=3

# ===== Polygon =====
POLYGON_BACKFILL_DAYS=30
POLYGON_CONFIRMATIONS=6
POLYGON_BATCH_SIZE_BLOCKS=7000
POLYGON_RATE_LIMIT_DELAY_MS=300
POLYGON_MAX_RETRIES=3

# ===== Arbitrum =====
ARBITRUM_BACKFILL_DAYS=30
ARBITRUM_CONFIRMATIONS=6
ARBITRUM_BATCH_SIZE_BLOCKS=10000
ARBITRUM_RATE_LIMIT_DELAY_MS=300
ARBITRUM_MAX_RETRIES=3

# Email digest limits
EVENTS_PER_EMAIL_LIMIT=25

# Risk scoring (comma-separated token contract addresses)
VALUABLE_TOKENS_ETHEREUM=
VALUABLE_TOKENS_POLYGON=
VALUABLE_TOKENS_ARBITRUM=